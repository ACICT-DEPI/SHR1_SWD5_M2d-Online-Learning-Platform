@model IEnumerable<OnlineLearningPlatform.UI.ViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Roles";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Role ID</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-action="EditRole" asp-route-id="@role.Id">Edit</a> |
                    <a asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateRole" class="btn btn-primary">Create New Role</a>
