@model ContentText
@{
    ViewData["Title"] = "Delete";
    Layout = "_DashLayout";
    var ContentTitle = (string)ViewBag.contentname;
}
<div style="padding:15px;">
    <h1 style="color:var(--primary)">Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ContentText</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubTitle)
        </dd>
        <dt class="col-sm-2">
            ContentTitle
        </dt>
        <dd class="col-sm-10">
            @ContentTitle
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Dashboard" asp-action="ContentTexts">Back to List</a>
    </form>
</div>
</div>
