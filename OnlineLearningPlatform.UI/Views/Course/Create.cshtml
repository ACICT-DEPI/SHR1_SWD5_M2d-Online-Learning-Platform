@model CourseViewModel
@{
    ViewData["Title"] = "Create";
    var tracks =(List<Track>) ViewBag.tracks;
    Layout = "_DashLayout";
}

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-start wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-start text-primary px-3">Courses</h6>
            <h1 class="mb-5">Create Course</h1>
        </div>
        <div class="row justify-content-start">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="wow fadeInUp" data-wow-delay="0.5s">

                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row g-3 my-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="@Model.Title" class="form-control" placeholder="Course Title">
                                    <label asp-for="@Model.Title">Course Title</label>
                                    <span asp-validation-for="@Model.Title"></span>

                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="@Model.Description" class="form-control" placeholder="Description">
                                    <label asp-for="@Model.Description">Description</label>
                                    <span asp-validation-for="@Model.Description"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="@Model.CreationDate" class="form-control">
                                    <label asp-for="@Model.CreationDate">Creation Date</label>
                                    <span asp-validation-for="@Model.CreationDate"></span>

                                </div>
                            </div>
                            <select asp-for="@Model.TrackId" class="form-control">
                                <option value="">-- Select Track --</option>
                                
                                @foreach (var track in tracks)
                                {
                                    <option value="@track.Id">@track.Name</option>
                                }
                                
                            </select>
                            <span asp-validation-for="@Model.TrackId"></span>
                            <div class="col-12 text-center">
                                <button class="btn btn-primary w-100 py-3" type="submit">Create</button>
                                <br />
                                <a asp-controller="Dashboard" asp-action="Courses" style="color:var(--dark)">Back to List</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

