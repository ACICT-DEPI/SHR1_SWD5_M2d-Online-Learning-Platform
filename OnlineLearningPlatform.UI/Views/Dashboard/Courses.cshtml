@model IEnumerable<OnlineLearningPlatform.UI.ViewModels.CourseViewModel>

@{
    ViewData["Title"] = "Courses";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Creation Date</th>
            <th>Track ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Title</td>
                <td>@course.Description</td>
                <td>@course.CreationDate?.ToString("d")</td>
                <td>@course.TrackId</td>
                <td>
                    <a asp-action="EditCourse" asp-route-id="@course.Id">Edit</a> |
                    <a asp-action="DeleteCourse" asp-route-id="@course.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateCourse" class="btn btn-primary">Create New Course</a>
