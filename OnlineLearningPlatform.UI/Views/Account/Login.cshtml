@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!-- Login Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Join Us</h6>
            <h1 class="mb-5">Login</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="wow fadeInUp" data-wow-delay="0.5s">
                    <form method="post" asp-action="Login">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row g-3 my-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="@Model.UserName" class="form-control" placeholder="User Name">
                                    <label asp-for="@Model.UserName">User Name</label>
                                    <span asp-validation-for="@Model.UserName"></span>

                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="@Model.Password" class="form-control" placeholder="Password">
                                    <label asp-for="@Model.Password">Password</label>
                                    <span asp-validation-for="@Model.Password"></span>
                                </div>
                            </div>
                            <div class="form-group form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" asp-for="RemmemberMe" /> @Html.DisplayNameFor(model => model.RemmemberMe)
                                </label>
                            </div>
                            <div class="col-12 text-center">
                                <button class="btn btn-primary w-100 py-3" type="submit">Login</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Login End -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}