@model ContentViewModel

@{
    ViewData["Title"] = "Create";
    var Courses = (List<Course>)ViewBag.Courses;
    Layout = "_DashLayout";
}


<div class="container-xxl py-5">
    <div class="container">
        <div class="text-start wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-start text-primary px-3">Contents</h6>
            <h1 class="mb-5">Create Content</h1>
        </div>
        <div class="row justify-content-start">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="wow fadeInUp" data-wow-delay="0.5s">

                    <form asp-controller="Content" asp-action="Create" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row g-3 my-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="@Model.Title" class="form-control" placeholder="Content Title">
                                    <label asp-for="@Model.Title">Content Title</label>
                                    <span asp-validation-for="@Model.Title"></span>

                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="@Model.VideoUrl" class="form-control" placeholder="Video">
                                    <label asp-for="@Model.VideoUrl">Video</label>
                                    <span asp-validation-for="@Model.VideoUrl"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                        <select asp-for="@Model.CourseId" class="form form-control">
                                                <option value="">-- Select Course --</option>
                                
                                                @foreach (var Course in Courses)
                                                {
                                                    <option value="@Course.Id">@Course.Title</option>
                                                }
                                        </select>
                                </div>
                            </div>
                            <div class="col-12 text-center">
                                <button class="btn btn-primary w-100 py-3" type="submit">Create</button>
                                <br />
                                <a asp-controller="Dashboard" asp-action="Contents" style="color:var(--dark)">Back to List</a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
